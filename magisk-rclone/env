RCLONEDIR="${MODPATH:-/data/adb/modules/rclone}"
RCLONEPROP="$RCLONEDIR/module.prop"
TMPDIR="${TMPDIR:-"$RCLONEDIR/.cache"}"
RCLONEWEB_PID="$TMPDIR/rclone_web.pid"

RCLONE_CONFIG_DIR="$RCLONEDIR/conf"
RCLONE_CONFIG="${RCLONE_CONFIG_DIR}/rclone.conf"
RCLONE_CACHE_DIR="${DOWNLOAD_CACHE:-$TMPDIR}/rclone"

RCLONE_ALLOW_OTHER=true
RCLONE_BUFFER_SIZE=32M
RCLONE_DIR_CACHE_TIME=10m
RCLONE_VFS_CACHE_MAX_AGE=12h
RCLONE_VFS_CACHE_MAX_SIZE=1024M
RCLONE_VFS_READ_CHUNK_SIZE=64M
RCLONE_VFS_READ_CHUNK_SIZE_LIMIT=2G
RCLONE_VFS_CACHE_MODE=full
RCLONE_ATTR_TIMEOUT=3s
RCLONE_GID=1015

RCLONE_RC_ADDR=":5572"
RCLONE_RC_WEB_GUI_UPDATE=true
RCLONE_RC_WEB_GUI_NO_OPEN_BROWSER=true
[ -f "${RCLONE_CONFIG_DIR}/htpasswd" ] && RCLONE_RC_HTPASSWD="${RCLONE_CONFIG_DIR}/htpasswd" || RCLONE_RC_NO_AUTH=true

# for more info https://rclone.org/docs/#environment-variables
# override the config in `./conf/env`
[ -f "${RCLONE_CONFIG_DIR}/env" ] && . "${RCLONE_CONFIG_DIR}/env"